<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
     <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
    <h2>Bookers</h2>
    <nav>
      <ul class="nav navbar-nav navbar-right">

      <% if user_signed_in? %>
      <li>
        <%= link_to 'Home', user_path(current_user.id),class: "home", class: "glyphicon glyphicon-home" %>
      </li>

      <li>
        <%= link_to 'お気に入り', user_favorites_path(current_user.id), class: "glyphicon glyphicon-home" %>
      </li>


      <li>
        <%= link_to 'Users', users_path,class: "users", class: "glyphicon glyphicon-user" %>
      </li>

      <li>
        <%= link_to 'Books', books_path,class: "books", class: "glyphicon glyphicon-book" %>
      </li>

      <li>
      <%= link_to "Logout", destroy_user_session_path, class: "logout", class: "glyphicon glyphicon-log-out", method: :delete %>
      </li>

      <% else %>
      <li>
        <%= link_to 'Home', "/",class: "home", class: "glyphicon glyphicon-home" %>
      </li>

      <li>
        <%= link_to "About", about_path,class: "about", class: "glyphicon glyphicon-link" %>
      </li>

      <li>
        <%= link_to "Sign up", new_user_registration_path,class: "sign_up", class: "glyphicon glyphicon-edit" %>
      </li>

      <li>
        <%= link_to "Sign in",new_user_session_path, class: "sign_in", class: "glyphicon glyphicon-log-in" %>
      </li>
    <% end %>
  </ul>
</nav>
</header>
<div class="container">
  <div class="row">
    <%= yield %>

  </div>
</div>
<footer>
  <p>CopyRight Infratop.inc</p>
</footer>

</body>


</html>
