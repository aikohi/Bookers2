<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
     <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
    <h2>Bookers</h2>
    <nav>
      <ul class="nav navbar-nav navbar-right">

      <% if user_signed_in? %>
      <li>
        <span class="glyphicon glyphicon-home" aria-hidden="true">
        <%= link_to 'Home', user_path(current_user.id),class: "home" %></span>
      </li>

      <li>
        <span class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to 'users', users_path,class: "users" %></span>
      </li>

      <li>
        <span class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to 'Books', books_path,class: "books" %></span>
      </li>

      <li>
      <span class="glyphicon glyphicon-log-out" aria-hidden="true"><%= link_to "logout", destroy_user_session_path, class: "logout", method: :delete %></span>
      </li>

      <% else %>
      <li>
        <span class="glyphicon glyphicon-home" aria-hidden="true">
        <%= link_to 'Home', "/",class: "home" %></span>
      </li>

      <li>
        <span class="glyphicon glyphicon-link" aria-hidden="true"><%= link_to "About", about_path,class: "about" %></span>
      </li>

      <li>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"><%= link_to "sigh up", new_user_registration_path,class: "sign_up" %></span>
      </li>

      <li>
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"><%= link_to "log in", new_user_session_path,class: "sign_in" %></span>
      </li>
    <% end %>
  </ul>
</nav>
</header>
<div class="container">
  <div class="row">
    <%= yield %>

  </div>
</div>
<footer>
  <p>CopyRight Infratop.inc</p>
</footer>

</body>


</html>
