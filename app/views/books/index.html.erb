
<%= render 'books/list', book: @book, user: @user %>
<!--検索機能------->
<sectin class="title clearfix"><h2>Books</h2>
  <p>search</p>
<%= form_tag(books_path, :method => 'get' ) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :title => nil %>
<% end %>
<!--検索機能------->
  <table class="table clearfix">
    <thead>
     <tr>
  	  <th>Title</th>
  	  <th>&nbsp;Opinion</th>
  	  <th></th>
     </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
    	   <td>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
          <%= link_to book.title, book_path(book.id), class: "show_#{book.id}" %>
<!-----お気に入り--->
              <% if current_user.favpost?(book) %>
              <%= form_for(current_user.favorites.find_by(book_id: book.id), html: { method: :delete }) do |f| %>
                <%= hidden_field_tag :book_id, book.id %>
                <%= f.submit 'お気に入り登録解除', class: 'btn btn-danger' %>
              <% end %>
            <% else %>
              <%= form_for(current_user.favorites.build) do |f| %>
                <%= hidden_field_tag :book_id, book.id %>
                <%= f.submit 'お気に入り登録', class: 'btn btn-primary' %>
              <% end %>
            <% end %>

<!------------------->
          </td>
    	   <td>&nbsp;&nbsp;<%= book.opinion %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</sectin>
<div>
&nbsp;
</div>