<%= render 'books/list', books: @books, book: @book_new, user: @user %>

<div class="flash">
  <%= flash[:success] %>
</div>
<div class="flash">
  <%= flash[:update] %>
</div>



 <section class="title clearfix">
  <h1>Book detail</h1>
   <table class="table">
   	  <tr>
   	 	<td>
   	 	<%= link_to user_path(@user.id),class: "user_#{@user.id}" do %>
   	 	<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %><br>
   	 		<%= @book.user.name %>
   	 	<% end %>
   	    </td>
   	    <td>
	 	<%= @book.title %>
	 	</td>
	 	<td>
	 	<%= @book.opinion %>&nbsp;&nbsp;
	 	</td>
	 	<td>
	 	<% if @book.user == current_user %>
	 	<button class="btn btn-success"><%= link_to "Edit",edit_book_path(@book.id), class: 'edit_book_#{@book.id}' %></button>
	 	<% end %>
	    </td>
	    <td>
	 	<% if @book.user == current_user %>
		<button class="btn btn-danger"><%= link_to "Destroy", book_path(@book.id), class: "destroy_book_#{@book.id}", method: :delete, "data-confirm" => "本気？本当に消すんですか?" %></button>
		 <% end %>
		</td>
	  </tr>
   </table>
  </section>
