<section class="sideber">
<% if current_user %>
  <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg' %>
      <table class="table">
        <tbody>
           <tr>
            <th>name</th>
            <th><%= user.name %></th>
           </tr>

           <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
           </tr>
           <tr>
             <th>
              <% if user.id == current_user.id %>
               <p>
                <button type="button" class="btn btn-default"><%= link_to edit_user_path(user), class: "edit_user_#{user.id}" do %>
                  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
                <% end %>
               </p>
             </th>
            </tr>
            <% end %>
        </tbody>
      </table>
  <% end %>

  <h3>New book</h3>
<%= form_for(book) do |f| %>
 <% if book.errors.any? %>
  <div id="error_explanation">
      <h3><%= book.errors.count %>Error!!</h3>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<h4>Title</h4>
<div class="form-group">
<%= f.text_field :title, class: "book_title" %></div>

<h4>Opnion</h4>
<div class="form-group">
<%= f.text_field :opinion, class: "book_body" %></div>

<%= f.submit "Create Book" ,class: "btn btn-primary" %>

<% end %>
</section>
