<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>

    <h4>Opinion</h4>
    <%= f.text_area :opinion, class: "book_body" %>

    <br><%= f.submit "Update Book", class: "btn btn-primary" %><br>
<% end %>

<%= link_to "Show",book_path, class: 'show_#{@book.id}' %>
<%= link_to "Back","/books",  class: 'back' %>